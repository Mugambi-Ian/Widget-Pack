<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/VDP_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Select days below."
        android:textColor="@android:color/black"
        android:textSize="16dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/VDP_btnSun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box_daypicker_unselected"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="5dp"
            android:text="Sun"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/VDP_btnMon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box_daypicker_unselected"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="5dp"
            android:text="Mon"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/VDP_btnTue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box_daypicker_unselected"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="5dp"
            android:text="Tue"
            android:textColor="@android:color/black" />

        <TextView

            android:id="@+id/VDP_btnWen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box_daypicker_unselected"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="5dp"
            android:text="Wen"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/VDP_btnThur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box_daypicker_unselected"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="5dp"
            android:text="Thur"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/VDP_btnFri"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box_daypicker_unselected"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="5dp"
            android:text="Fri"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/VDP_btnSat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box_daypicker_unselected"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="5dp"
            android:text="Sat"
            android:textColor="@android:color/black" />

    </LinearLayout>
</LinearLayout>